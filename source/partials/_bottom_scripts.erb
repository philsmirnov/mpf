
<%= javascript_include_tag 'helper.js', 'vendor/jquery.js', 'foundation.min.js' %>

<script>
    $(document).foundation();
    MBP.startupImage();
    MBP.preventZoom();
    MBP.setFontSize();
    $(document)
            .foundation('section', {
                callback: function (){
                    var containerPos = $('section.active').offset().top;
                    $('html, body').animate({ scrollTop: containerPos }, 200);
                }
            });
</script>

<% if content_for? :js %>
    <%= javascript_include_tag yield_content(:js) %>
<% end %>
